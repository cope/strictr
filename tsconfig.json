{
	"compilerOptions": {
		"lib": [
			"es2015",
			"dom"
		],
		"target": "es2015",
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		".idea",
		".sonarlint",
		".nyc_output",
		"coverage",
		"docs",
		"node_modules",
		"test"
	]
}